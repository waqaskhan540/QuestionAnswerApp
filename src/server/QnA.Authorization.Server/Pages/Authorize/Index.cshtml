@page
@model QnA.Authorization.Server.Pages.Authorize.IndexModel

@{
    ViewData["Title"] = "Index";
}

@if (Model.IsError)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}
else
{
    <div asp-validation-summary="ModelOnly"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" class="form-control" />
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" />
        </div>


        <input asp-for="AuthorizationRequest.ClientId" type="hidden" />
        <input asp-for="AuthorizationRequest.RedirectUri" type="hidden" />
        <input asp-for="AuthorizationRequest.ResponseType" type="hidden" />
        <input asp-for="AuthorizationRequest.State" type="hidden" />
        <input asp-for="AuthorizationRequest.Scope" type="hidden" />

        <button type="submit" class="btn btn-primary">Login</button>
    </form>
}
